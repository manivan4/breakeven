{
  "name": "breakeven",
  "version": "0.1.0",
  "private": true,
  "description": "BreakEven: relationship finance toolkit (monorepo)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:api dev:web",
    "dev:web": "npm run dev --workspace @breakeven/web",
    "dev:api": "npm run dev --workspace @breakeven/api",
    "build": "npm-run-all build:shared build:api build:web",
    "build:web": "npm run build --workspace @breakeven/web",
    "build:api": "npm run build --workspace @breakeven/api",
    "build:shared": "npm run build --workspace @breakeven/shared",
    "lint": "npm-run-all lint:api lint:web",
    "lint:web": "npm run lint --workspace @breakeven/web",
    "lint:api": "npm run lint --workspace @breakeven/api"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
